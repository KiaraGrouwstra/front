//- {k, id, named, rows: [{id, val}]}
table.bordered.highlight(id=`{{id}}`)
  thead(*ngIf=`named`)
    th {{k}}
  tbody
    tr(*ngFor=`#r of rows`)
      td(
        id=`{{r.id}}`
      )
        //- p {{ r | json }}
        //- scalar(
        value(
          '[path]'=`r.path`
          '[val]'=`r.val`
          '[schema]'=`r.schema`
        )
