//- {k, id, named, scalar: [], object: [], array: []}
.card
  .card-content(id=`{{id | async}}`)
    span.card-title(*ngIf='named') {{k | async}}
    mydl(
      '[path$]'=`path$`
      '[val$]'=`scalar`
    )
    object(
      *ngFor=`#x of (object | async)`
      '[path$]'=`x.path`
      '[val$]'=`x.val`
      '[schema$]'=`x.schema`
      '[named]'=`true`
    )
    //- array
    //- '[named]'=`true`
    value(
      *ngFor=`#x of (array | async)`
      '[path$]'=`x.path`
      '[val$]'=`x.val`
      '[schema$]'=`x.schema`
    )
