//- p token: {{parent.auths['instagram']?.token}}
.input-field(*ngFor=`#scope of scopes_arr`)
  input.filled-in(
    type='checkbox'
    '[id]'=`scope`
    '[(ngModel)]'=`want_scope[scope]`
  )
  label(
    '[attr.for]'=`scope`
    '[ngClass]'=`{ 'green-text': have_scope[scope] }`
  )
    b {{scope}}: 
    | {{scope_descs[scope]}}
br
button.btn.waves-effect.waves-light(
  '(click)'=`onSubmit()`
  '[ngClass]'=`{ 'disabled': loading }`
) Connect
