import WS from './ws.ts';
global.ws = new WS();

var App = ng
.Component({
  selector: 'app'
})
.View({
  styles: [ require('./style.less') ],
  template: require('./header.jade')
})
.Class({
  constructor: function () {
    this.name = 'Alice';
  },
  addUrl: function(url) {
    // this.urls.push(url);
    global.ws.send({ method: "POST", url: "/urls", body: url })
  }
});

document.addEventListener('DOMContentLoaded', () => {
  ng.bootstrap(App);
});
