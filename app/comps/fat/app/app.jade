#index-banner.section.no-pad-bot
  .container(style='width: 90%;')
    #floating-buttons
      - bool = { val: '(_ws.connected$ | async)', ok: 'connected', ng: 'connecting...', icon: 'power_settings_new' }
      include ./bool.jade
      - bool = { val: 'allowCors', ok: 'CORS requests enabled', ng: 'CORS restrictions active; considering running Chrome with flags `--disable-web-security --allow-running-insecure-content --user-data-dir=YOUR_DIRECTORY`', icon: 'loop' }
      include ./bool.jade

    .row
      .col.s12
        ul.tabs
          - tabs = { curl: 'Curl', web: 'web', api: 'API' }
          - each id in Object.keys(tabs)
            li.tab.col.s4
              a(href=`#${id}`)= tabs[id]
      .col.s12
        .card
          .card-content
            #curl
              include ./curl.jade
            #web
              include ./web.jade
            #api
              include ./api.jade
