.row
  //- .s6
  //- ^ kinda ugly without this, but I'd to figure out how many columns I should fit them into...
  .input-field.col(*ngFor=`let scope of scopes`)
    input.filled-in(
      type='checkbox'
      '[id]'=`scope`
      '[(ngModel)]'=`want_scope[scope]`
    )
    label(
      '[attr.for]'=`scope`
      '[ngClass]'=`{ 'green-text': have_scope[scope] }`
    )
      b {{scope}}:
      | {{ scope_descs ? scope_descs[scope] : '' }}
.row
  button.btn.waves-effect.waves-light.col.offset-s3(
    '(click)'=`onSubmit()`
    '[ngClass]'=`{ 'disabled': loading }`
  ) Connect
