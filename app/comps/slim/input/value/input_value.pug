ng-container('[ngSwitch]'=`ctrl?.constructor?.name`)
  template('[ngSwitchCase]'=`'SchemaControlPolyable'`)
    input-polyable(
      '[named]'=`named`
      '[schema]'=`schema`
      '[ctrl]'=`ctrl`
    )
  template('[ngSwitchCase]'=`'SchemaControlOption'`)
    //- '[schema]'=`schema`
    input-option(
      '[named]'=`named`
      '[ctrl]'=`ctrl`
    )
  template(ngSwitchDefault)
    ng-container('[ngSwitch]'=`type`)
      template('[ngSwitchCase]'=`'scalar'`)
        //- '[name]'=`schema.name`
        input-field(
          '[named]'=`named`
          '[schema]'=`schema`
          '[ctrl]'=`ctrl`
        )
      template('[ngSwitchCase]'=`'array'`)
        //- *ngIf=`ctrl instanceof ControlSet`
        ng-container(
          '[ngSwitch]'=`['SchemaControlSet','SchemaTextareaArrayControl'].includes(ctrl?.constructor?.name)`
        )
          template('[ngSwitchCase]'=`true`)
            input-field(
              '[named]'=`named`
              '[schema]'=`schema`
              '[ctrl]'=`ctrl`
            )
          template(ngSwitchDefault)
            input-array(
              '[named]'=`named`
              '[schema]'=`schema`
              '[ctrl]'=`ctrl`
            )
      template('[ngSwitchCase]'=`'object'`)
        //- input-object(
        input-struct(
          '[named]'=`named`
          '[schema]'=`schema`
          '[ctrl]'=`ctrl`
        )
      template('[ngSwitchCase]'=`'table'`)
        input-table(
          '[named]'=`named`
          '[schema]'=`schema`
          '[ctrl]'=`ctrl`
        )
      template(ngSwitchDefault)
        p UNIMPLEMENTED INPUT-VALUE TYPE {{ type | json }}!
