//- '#frm'='ngModelGroup'
form(
  '[formGroup]'='form'
)
  .fn_desc {{ desc }}
  //- '[path]'=`[]`
  //- '[named]'=`false`
  input-value(
    *ngIf=`schema`
    '[schema]'=`schema`
    '[ctrl]'=`form`
  )
  //- type='submit'
  //- '[disabled]'=`!form.valid`
  //- `button` emits an extra submit Event but `a` doesn't natively support `[disabled]`...
  //- a.btn.waves-effect.waves-light(
  button.btn.waves-effect.waves-light(
    '(click)'=`submit.emit(form.value)`
    '[disabled]'=`disabled$ | async`
    '[ngClass]'=`{ 'disabled': disabled$ | async }`
  ) Submit

