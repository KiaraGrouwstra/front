input-value(
  *ngIf=`ctrl.do_multi`
  '[path]'=`path`
  '[schema]'=`ctrl.multi_schema`
  '[named]'=`named`
  '[ctrl]'=`ctrl.multi`
)

- rand = Math.floor(Math.random() * 100000)
.input-field
  input.filled-in(
    type='checkbox'
    '[(ngModel)]'=`ctrl.do_multi`
    '[id]'=`rand_id`
  )
  label(
    '[attr.for]'=`rand_id`
  )
    | multiple
